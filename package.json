{
  "name": "gw2armory",
  "version": "0.0.0",
  "dependencies": {
    "angular": "1.4.x",
    "angular-ui-router": "^0.2.15",
    "axios": "^0.5.4",
    "es6-promise": "^3.0.2",
    "font-awesome-webpack": "0.0.4",
    "localforage": "^1.2.10",
    "ng-redux": "^3.0.0",
    "normalize-css": "^2.3.1",
    "redux": "^3.0.0",
    "redux-thunk": "^1.0.0",
    "redux-ui-router": "^0.2.0",
    "reselect": "^1.1.0"
  },
  "scripts": {
    "build:prod": "WEBPACK_ENV=PROD webpack",
    "build:dev": "WEBPACK_ENV=DEV webpack",
    "start": "WEBPACK_ENV=START:DEV webpack --watch --inline --hot",
    "start:prod": "WEBPACK_ENV=START:PROD webpack",
    "deploy:beta": "ENV=BETA node ./deploy",
    "test": "WEBPACK_ENV=TEST:SINGLE karma start --single-run",
    "test:auto": "WEBPACK_ENV=TEST:AUTO karma start",

    "build:prod:win": "set WEBPACK_ENV=PROD&& webpack",
    "build:dev:win": "set WEBPACK_ENV=DEV&& webpack",
    "start:win": "set WEBPACK_ENV=START:DEV&& webpack --watch --inline --hot",
    "start:prod:win": "set WEBPACK_ENV=START:PROD&& webpack",
    "deploy:beta:win": "set ENV=BETA&& node ./deploy",
    "test:win": "set WEBPACK_ENV=TEST:SINGLE&& karma start --single-run",
    "test:auto:win": "set WEBPACK_ENV=TEST:AUTO&& karma start"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.1.0",
    "aws-sdk": "^2.2.10",
    "babel-core": "~5.5.8",
    "babel-loader": "~5.1.4",
    "css-loader": "^0.19.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "html-loader": "^0.3.0",
    "html-webpack-plugin": "^1.6.2",
    "image-webpack-loader": "^1.6.1",
    "jasmine": "^2.3.2",
    "jshint-loader": "~0.8.3",
    "karma": "~0.13",
    "karma-babel-preprocessor": "^5.2.1",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "~0.2.0",
    "karma-webpack": "^1.7.0",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "ng-annotate-loader": "0.0.10",
    "redux-logger": "^1.0.8",
    "style-loader": "^0.12.4",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  },
  "engines": {
    "node": ">=0.10.0"
  }
}
